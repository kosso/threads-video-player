{
    "manifest_version": 3,
    "name": "Naughty Facebook",
    "version": "1.0",
    "description": "Trying to detect and remove Sponsored posts..",
    "icons": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_icon": {
            "16": "images/icon-16.png",
            "32": "images/icon-32.png",
            "48": "images/icon-48.png",
            "128": "images/icon-128.png"
        }
    },
    "permissions": [
        "activeTab"
    ],
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [
                "https://facebook.com/*",
                "https://www.facebook.com/*"
            ],
            "run_at": "document_end"
        }
    ]
}